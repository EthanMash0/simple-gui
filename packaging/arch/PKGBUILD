pkgname=hyprdock-git
pkgver=e4ba030
pkgrel=1
pkgdesc="Bottom dock for Hyprland (GTK4 layer-shell)"
arch=(x86_64)
url="https://github.com/EthanMash0/hyprdock.git"
# license=(MIT)  # adjust
depends=(gtk4 gtk4-layer-shell glib2)
makedepends=(git gcc make pkgconf)
provides=(hyprdock)
conflicts=(hyprdock)

source=("hyprdock::git+file://$startdir/../..")
sha256sums=('SKIP')

pkgver() {
  cd "$srcdir/${pkgname%-git}"
  git describe --long --tags --always | sed 's/^v//;s/-/.r/;s/-/./'
}

build() {
  cd "$srcdir/${pkgname%-git}"
  make
}

package() {
  cd "$srcdir/${pkgname%-git}"
  make DESTDIR="$pkgdir" PREFIX=/usr install
}
